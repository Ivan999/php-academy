{% extends 'AppBundle::layout.html.twig' %}

{% import 'AppBundle:Accommodation:accommodation.html.twig' as helper %}

{% block content %}
    <div class="col-2-wrapper">
        {% for accommodation in accommodations %}
            <a href="{{ path('AppBundle_Accommodation_accommodation', {'accommodationId': accommodation.id}) }}"
                class="col-2 white kartica">
                <img src="{{ path('AppBundle_Accommodation_mainImage', {'accommodationId': accommodation.id}) }}"
                    alt="Apartment image" />
                <h4>
                    {{ accommodation.name }}
                    {{ helper.printCategory(accommodation.category) }}
                </h4>
                {{ helper.printPrice(accommodation.pricePerDay) }}
            </a>
        {% else %}
            No accommodations found.
        {% endfor %}
    </div>

{% endblock content %}